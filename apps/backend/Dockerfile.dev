# Development Dockerfile for Backend with Hot Reload
FROM node:20-alpine

# Install pnpm
RUN npm install -g pnpm@9

WORKDIR /app

# Install dependencies
# These will be overridden by volume mounts in development
COPY pnpm-workspace.yaml pnpm-lock.yaml package.json ./
COPY apps/backend/package.json ./apps/backend/
COPY packages/shared/package.json ./packages/shared/

RUN pnpm install

# Expose port
EXPOSE 11104

# Set development environment
ENV NODE_ENV=development
ENV PORT=11104

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=40s \
  CMD node -e "require('http').get('http://localhost:11104/api/health', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)}).on('error', () => process.exit(1))"

# Start script that generates Prisma Client, runs migrations, and runs dev server
WORKDIR /app/apps/backend
CMD sh -c "sleep 10 && pnpm prisma generate && pnpm prisma migrate deploy && pnpm dev"
