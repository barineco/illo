# Development Dockerfile for Frontend with HMR
FROM node:20-alpine

# Install pnpm
RUN npm install -g pnpm@9

WORKDIR /app

# Install dependencies
# These will be overridden by volume mounts in development
COPY pnpm-workspace.yaml pnpm-lock.yaml package.json ./
COPY apps/frontend/package.json ./apps/frontend/
COPY packages/shared/package.json ./packages/shared/

RUN pnpm install

# Expose port
EXPOSE 11103

# Expose port for HMR WebSocket
EXPOSE 24678

# Set development environment
ENV NODE_ENV=development
ENV HOST=0.0.0.0
ENV PORT=11103
ENV NODE_OPTIONS="--max-old-space-size=2048"

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=40s \
  CMD node -e "require('http').get('http://localhost:11103/', (r) => {process.exit(r.statusCode === 200 ? 0 : 1)}).on('error', () => process.exit(1))"

# Start Nuxt in dev mode with HMR
WORKDIR /app/apps/frontend
CMD ["pnpm", "dev"]
